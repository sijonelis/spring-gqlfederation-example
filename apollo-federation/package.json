{
  "name": "gql-gateway",
  "version": "1.0.0",
  "author": "",
  "license": "ISC",
  "main": "app.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev src/app.ts dev",
    "dev-win": "ts-node-dev src/app.ts dev",
    "dev:test": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc -build",
    "start": "NODE_ENV=production node --max-old-space-size=100 build/app.js",
    "start:dev": "NODE_ENV=development node --max-old-space-size=100 build/app.js",
    "bs": "yarn build && yarn start",
    "bs:dev": "yarn build && yarn start:dev",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "clear": "rm yarn.lock && rm -irf node_modules && yarn",
    "docker:prune": "docker system prune -a",
    "docker:build": "docker build -t gql-gateway-gen2 . --platform=linux/amd64",
    "docker:start": "docker run -p 3001:4000 gql-gateway",
    "docker:start:cpulimit": "docker run --cpus=0.1 -p 3001:4000 gql-gateway"
  },
  "dependencies": {
    "@apollo/gateway": "0.45.0",
    "@opentelemetry/api": "1.0",
    "@opentelemetry/core": "1.0",
    "@opentelemetry/exporter-jaeger": "^1.7.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.33.0",
    "@opentelemetry/instrumentation-express": "0.28",
    "@opentelemetry/instrumentation-http": "0.27",
    "@opentelemetry/resources": "1.0",
    "@opentelemetry/sdk-trace-base": "1.0",
    "@opentelemetry/sdk-trace-node": "1.0",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "axios": "^0.24.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "15.8.0",
    "pino-http": "^6.4.0",
    "pino-pretty": "^7.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
