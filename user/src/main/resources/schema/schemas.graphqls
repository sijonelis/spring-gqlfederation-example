type Query {
    user(userId: Int!): User
}

type Review @key(fields: "id") @extends {
    id: ID @external
    authorId: ID @external
    author: User @requires(fields: "authorId")
}

type User @key(fields: "id") {
    id: ID!
    name: String
    username: String
    address: Address
}

type Address {
    id: ID!
    city: String
    country: String
}